{
	"name": "Weblate",
	"id": "weblate",
	"packaging_format": 1,
	"requirements": {
		"yunohost": ">= 2.7.0"
	},
	"description": {
		"en": "Instant messaging server who use matrix"
	},
	"version": "2.16.0",
	"url": "https://weblate.org",
	"license": "GNU GPL-3, or any later version.",
	"maintainer": {
		"name": "Jean-Baptiste Holcroft",
		"email": "jean-baptiste@holcroft.fr"
	},
	"multi_instance": true,
	"services": [
		"nginx"
	],
	"arguments": {
		"install" : [
			{
				"name": "domain",
				"type": "domain",
				"ask": {
					"en": "Choose a domain:"
				},
				"example": "domain.org"
			},
			{
				"name": "path",
				"type": "path",
				"ask": {
				    "en": "Choose a path for Weblate:"
				},
				"example": "/weblate",
				"default": "/weblate"
			},
			{
				"name": "is_public",
				"type": "boolean",
				"ask": {
					"en": "Is it a public server ?"
				},
				"default": "0"
			}

		]
	}
}
